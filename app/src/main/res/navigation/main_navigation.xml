<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    app:startDestination="@id/siteFragment">

    <fragment
        android:id="@+id/aboutFragment"
        android:name="ie.djroche.datalogviewer.ui.about.AboutFragment"
        android:label="fragment_about"
        tools:layout="@layout/fragment_about" />
    <fragment
        android:id="@+id/siteFragment"
        android:name="ie.djroche.datalogviewer.ui.site.SiteFragment"
        android:label="Sites"
        tools:layout="@layout/fragment_site">
        <action
            android:id="@+id/action_siteFragment_to_KPIFragment"
            app:destination="@id/kpiFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />

    </fragment>
    <fragment
        android:id="@+id/detailFragment"
        android:name="ie.djroche.datalogviewer.ui.detail.DetailFragment"
        android:label="fragment_detail"
        tools:layout="@layout/fragment_detail" >
        <action
            android:id="@+id/action_detailFragment_to_KPIFragment"
            app:destination="@id/kpiFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/kpiFragment"
        android:name="ie.djroche.datalogviewer.ui.kpi.KPIFragment"
        android:label="Key Performance Indicators"
        tools:layout="@layout/fragment_k_p_i">
        <action
            android:id="@+id/action_KPIFragment_to_siteFragment2"
            app:destination="@id/siteFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />
        <action
            android:id="@+id/action_KPIFragment_to_detailFragment"
            app:destination="@id/detailFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />
        <argument
            android:name="siteID"
            app:argType="string" />
        <argument android:name="siteDescription"
            app:argType="string" />
    </fragment>
</navigation>